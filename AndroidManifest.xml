<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.qjy.easynews"
          android:versionCode="1"
          android:versionName="1.0"
        >

    <uses-sdk android:minSdkVersion="8"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:label="@string/app_name"
            android:icon="@drawable/ic_launcher"
            android:name=".app.AppCtx"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            >
        <activity
                android:name=".biz.activity.MainActivity"
                android:label="@string/app_name"
                android:screenOrientation="portrait"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".biz.activity.NewsDetailActivity"
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait"
                />
        <activity
                android:name=".biz.activity.CommentsActivity"
                android:screenOrientation="portrait"
                />
        <activity
                android:name=".biz.activity.PicDetailActivity"
                android:screenOrientation="portrait"
                />
        <activity
                android:name=".biz.activity.VideoDetailActivity"
                android:screenOrientation="landscape"
                />
        <activity android:name=".biz.activity.LoginActivity"/>
        <activity android:name=".biz.activity.ChooseActivity"/>
        <activity android:name=".biz.activity.ChoosedActivity"/>
        <activity android:name=".biz.activity.RegisterActivity"/>
        <activity android:name=".biz.activity.ConsummateActivity"/>
    </application>
</manifest>
