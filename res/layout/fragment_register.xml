<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

        <Button
                android:id="@+id/btn_regist_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backbtn"
                android:layout_alignParentLeft="true"
                android:onClick="clickButton"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                android:text="注册"
                />
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ccc"
            />

    <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edt_register_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:hint="手机/邮箱/用户名"
            />

    <EditText
            android:id="@+id/edt_register_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:hint="密码"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            >

        <EditText
                android:id="@+id/edt_register_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="验证码"
                />
            <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/networkImageView_register_code"
                    android:layout_width="100dp"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"  />

    </LinearLayout>


    <Button
            android:id="@+id/btn_regist_next"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:background="@drawable/logoffbtn"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#333"
            android:onClick="clickButton"
            android:text="下一步"
            />


</LinearLayout>