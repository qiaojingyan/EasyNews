<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000"
        >

    <LinearLayout
            android:id="@+id/linearLayout_picdetail_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >

            <Button
                    android:id="@+id/btn_picdetail_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/backbtn"
                    android:onClick="clickButton"
                    />
        </LinearLayout>

        <Button
                android:layout_marginRight="20dp"
                android:id="@+id/btn_picdetail_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/favoritebtn"
                android:onClick="clickButton"
                />

        <Button
                android:id="@+id/btn_picdetail_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sharebtn"
                android:onClick="clickButton"
                />

    </LinearLayout>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_picdetail_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <LinearLayout
                android:id="@+id/linearLayout_picdetail_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#3000"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                <TextView
                        android:id="@+id/textView_picdetail_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textColor="#fff"
                        android:padding="5dp"
                        />

                <TextView
                        android:id="@+id/textView_picdetail_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        />
            </LinearLayout>


            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        >

                    <TextView
                            android:id="@+id/textView_picdetail_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#ddd"
                            android:textSize="14sp"
                            />
                </LinearLayout>
            </ScrollView>


        </LinearLayout>


    </FrameLayout>


    <LinearLayout
            android:id="@+id/linearLayout_picdetail_pl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            >

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:hint="我来说两句..."
                android:background="#ccc"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />

        <LinearLayout
                android:id="@+id/linearLayout_picdetail_comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:onClick="clickButton"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                >

            <TextView
                    android:id="@+id/textView_picdetail_commentsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:layout_gravity="center"
                    android:textColor="#fff"
                    />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment"
                    android:layout_gravity="top"
                    />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>