<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#eee"
        >


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

        <Button
                android:id="@+id/btn_consummate_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backbtn"
                android:layout_alignParentLeft="true"
                android:onClick="clickButton"
                android:layout_centerVertical="true"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="22sp"
                android:text="完善资料"
                />

        <Button
                android:id="@+id/btn_consummate_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logoffbtn"
                android:padding="10dp"
                android:text="完成"
                android:onClick="clickButton"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ccc"
            />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="30dp"
            android:background="#eed"
            android:layout_marginTop="10dp"
            >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/upload_head"
                android:clickable="true"
                android:onClick="clickButton"
                />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#eee"
            />


    <LinearLayout
            android:id="@+id/linearLayout_consummate_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="#fff"
            android:clickable="true"
            android:onClick="clickButton"
            >

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="昵称"
                />
        <TextView
                android:id="@+id/textView_consummate_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            android:layout_marginLeft="15dp"
            />

    <LinearLayout
            android:id="@+id/linearLayout_consummate_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="#fff"
            android:clickable="true"
            android:onClick="clickButton"
            >

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="性别"
                />

        <TextView
                android:id="@+id/textView_consummate_sex"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#eee"
            />

    <LinearLayout
            android:id="@+id/linearLayout_consummate_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:background="#fff"
            android:clickable="true"
            android:onClick="clickButton"
            >

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="手机号"

                />
        <TextView
                android:id="@+id/textView_consummate_tel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

    </LinearLayout>


</LinearLayout>